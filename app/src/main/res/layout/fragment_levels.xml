<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/bg" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_memorize_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintDimensionRatio="1:0.38"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:srcCompat="@drawable/logo_memorize_game" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivHome"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.12"
        app:srcCompat="@drawable/icon_button_home" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineHorizontal"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineVertical"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/icon_mouse" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        app:srcCompat="@drawable/icon_tiger" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode2x2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="80dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintEnd_toStartOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/iv_memorize_game"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_2x2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode3x2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="80dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintStart_toEndOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/iv_memorize_game"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_3x2" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode4x3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintEnd_toStartOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/ivMode2x2"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_4x3" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode5x4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintStart_toEndOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/ivMode3x2"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_5x4" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode6x5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintEnd_toStartOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/ivMode4x3"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_6x5" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivMode8x7"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintDimensionRatio="2.19"
        app:layout_constraintStart_toEndOf="@id/guideLineVertical"
        app:layout_constraintTop_toBottomOf="@id/ivMode5x4"
        app:layout_constraintWidth_percent="0.45"
        app:srcCompat="@drawable/icon_mode_8x7" />

</androidx.constraintlayout.widget.ConstraintLayout>